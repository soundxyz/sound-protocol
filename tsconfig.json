{
    "exclude": ["node_modules", "./dist", "/out", "./tests", "/cache"],
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "dist",
        "composite": true,
        "skipLibCheck": true,
        "noEmit": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "paths": { "~/*": ["src/*"] },
    },
    "include": ["build.ts", "package.json", "typechain"]
}
