{
  "name": "@soundxyz/protocol",
  "version": "2.0.0",
  "author": "soundxyz",
  "main": "typechain/index.ts",
  "homepage": "https://github.com/soundxyz/sound-protocol#readme",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:gas": "forge test --gas-report",
    "solhint": "solhint -f table contracts/**/*.sol",
    "slither": "slither . --config-file slither.config.json",
    "prepare": "husky install",
    "postinstall": "forge install",
    "prettier:write": "prettier --write contracts/**/*.sol tests/**/*.sol",
    "typechain": "npx typechain --discriminate-types --target ethers-v5 --out-dir typechain 'out/**/*[!metadata].json' && rm -rf typechain/**/*.t.sol",
    "release:canary": "(node scripts/canary-release.js && pnpm -r publish --access public --no-git-checks --tag alpha) || echo Skipping Canary..."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soundxyz/sound-protocol.git"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@changesets/cli": "^2.23.2",
    "@typechain/ethers-v5": "^10.1.0",
    "danger": "^11.1.1",
    "husky": "8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "typechain": "^8.1.0"
  },
  "dependencies": {
    "eslint": "^5.16.0",
    "eslint-scope": "^4.0.3",
    "eslint-utils": "^1.4.3",
    "eslint-visitor-keys": "^1.3.0",
    "prettier-linter-helpers": "^1.0.0"
  }
}
