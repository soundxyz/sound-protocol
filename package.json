{
  "name": "@soundxyz/sound-protocol",
  "version": "0.0.1",
  "author": "soundxyz",
  "homepage": "https://github.com/soundxyz/sound-protocol#readme",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage --contracts contracts --report lcov && genhtml lcov.info --branch-coverage --output-directory coverage --legend",
    "solhint": "solhint -f table contracts/**/*.sol",
    "slither": "slither . --config-file slither.config.json",
    "prepare": "husky install",
    "postinstall": "forge install",
    "prettier:write": "prettier --write contracts/**/*.sol tests/**/*.sol scripts/**/*.sol",
    "typechain": "npx typechain --discriminate-types --target ethers-v5 --out-dir typechain 'out-2/**/*.json'",
    "release:canary": "(node scripts/js/canary-release.js && pnpm -r publish --access public --no-git-checks --tag alpha) || echo Skipping Canary...",
    "prepack": "rm -rf out out-2 dist typechain && pnpm build && cp -r out out-2 && rm -rf ./out-2/test.sol && rm -rf ./out-2/*.t.sol && rm -rf ./out-2/Mock*.sol && find ./out-2 -name '*.metadata.json' -delete && pnpm typechain && bob-tsm build.ts",
    "postpublish": "gh-release"
  },
    "repository": {
    "type": "git",
    "url": "git+https://github.com/soundxyz/sound-protocol.git"
  },
  "lint-staged": {
    "*.sol": "solhint",
    "*.{js,sol,md}": "prettier --write"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "ethers": "^5.6.9"
  },
  "devDependencies": {
    "@changesets/apply-release-plan": "^6.0.4",
    "@changesets/assemble-release-plan": "^5.2.1",
    "@changesets/cli": "^2.23.2",
    "@changesets/config": "^2.1.1",
    "@changesets/read": "^0.5.7",
    "@manypkg/get-packages": "^1.1.3",
    "@pnpm/exportable-manifest": "^3.1.2",
    "@pnpm/types": "^8.5.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.11",
    "bob-ts": "^4.0.0",
    "bob-tsm": "^1.1.1",
    "changesets-github-release": "^0.1.0",
    "concurrently": "^7.3.0",
    "danger": "^11.1.1",
    "esbuild": "^0.15.5",
    "eslint": "^5.16.0",
    "eslint-scope": "^4.0.3",
    "eslint-utils": "^1.4.3",
    "eslint-visitor-keys": "^1.3.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "husky": "8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prettier-linter-helpers": "^1.0.0",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "semver": "^7.3.7",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "access": "restricted",
    "directory": "dist"
  }
}
